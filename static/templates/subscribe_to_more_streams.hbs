{{#if exactly_one_unsubscribed_stream}}
    <a href="#streams/all" class="subscribe-to-more-streams__link">
        <i aria-hidden="true" class="subscribe-to-more-streams__icon">
            <img src="/static/images/senla/search.svg" alt="search">
        </i>
        {{~#tr}}Browse 1 more stream{{/tr~}}
    </a>
{{else if can_subscribe_stream_count}}
    <a href="#streams/all" class="subscribe-to-more-streams__link">
        <i aria-hidden="true" class="subscribe-to-more-streams__icon">
            <img src="/static/images/senla/search.svg" alt="search">
        </i>
        {{~#tr}}Browse {can_subscribe_stream_count} more streams{{/tr~}}
    </a>
{{else if can_create_streams}}
    <a href="#streams/new" class="subscribe-to-more-streams__link">
        <i aria-hidden="true" class="subscribe-to-more-streams__icon">
            <img src="/static/images/senla/search.svg" alt="search">
        </i>
        {{~t "Create a stream"~}}
    </a>
{{/if}}
